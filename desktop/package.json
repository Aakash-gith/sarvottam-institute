{
    "name": "sarvottam-desktop",
    "version": "1.0.0",
    "description": "Desktop application for Sarvottam Institute",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build --windows",
        "pack": "electron-builder build --dir"
    },
    "author": "Sarvottam Institute",
    "license": "ISC",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.sarvottam.app",
        "productName": "Sarvottam Institute",
        "copyright": "Copyright Â© 2022 Sarvottam Institute",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                "nsis",
                "msix"
            ],
            "icon": "assets/icon.jpg"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "installerIcon": "assets/icon.jpg",
            "uninstallerIcon": "assets/icon.jpg",
            "runAfterFinish": true
        },
        "msix": {
            "publisherDisplayName": "Sarvottam Institute",
            "identityName": "SarvottamInstitute.App",
            "languages": [
                "en-US"
            ]
        },
        "files": [
            "main.js",
            "preload.js",
            "assets/**/*"
        ],
        "publish": null
    }
}